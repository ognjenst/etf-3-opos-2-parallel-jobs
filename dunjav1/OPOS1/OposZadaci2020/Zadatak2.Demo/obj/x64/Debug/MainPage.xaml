<Page
    x:Class="Zadatak2.Demo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zadatak2.Demo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="#FFA9DDF4">
        <TextBlock x:ConnectionId='2' x:Name="MojaAplikacija" HorizontalAlignment="Center" Margin="30" TextWrapping="Wrap" FontSize="36" FontFamily="Snap ITC" FontWeight="Normal" FontStyle="Italic">MojaAplikacija</TextBlock>
        <TextBox x:ConnectionId='3' x:Name="ImagePath" Height="80" PlaceholderText="Odaberite folder sa slikama..." TextWrapping="Wrap" Margin="100,0,100,0" Width="1100" Background="#66FFFFFF"/>
        <Button x:ConnectionId='4' x:Name="OpenFileButton" Height="40" Width="80" HorizontalAlignment="Center" Margin="0,10,0,0" FocusVisualPrimaryBrush="#FF2E8AC2" Background="#661D538E"                             >
            <SymbolIcon Symbol="OpenFile" Width="20" Height="20"/>
        </Button>
        <ProgressBar Height="20" Margin="100,10,100,0"/>
    </StackPanel>
</Page>
	

